
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PrincipalMenu.cshtml";
}

    <div class="col-sm-12 col-xl-12">
        <div class="page-header card">
            <div class="card-block">
                <h5 class="m-b-10">Familias</h5>
                <p class="text-muted m-b-10"></p>
                <ul class="breadcrumb-title b-t-default p-t-10">
                    <li class="breadcrumb-item">
                        <a href="/Inicio"> <i class="fa fa-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#!">Seguimiento de Actividades</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#!">Familias</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    

    <div class="col-sm-12 col-xl-12">
        <div class="card border-primary">
            <div class="card-block text-dark">
                <div class="table-responsive">
                    <table id="dtSeguimiento" class="table table-bordered table-hover" width="100%"></table>
                </div>
            </div>
        </div>
    </div>
@Html.Hidden("hdnCUI")
<div class="modal fade" id="modal-seguimiento" role="dialog">
    <div class="modal-dialog modal-sm" role="document" style="height:900px; overflow-y: initial !important">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fa fa-edit"></i>&nbsp;<span id="lblProyecto"></span>
                </h5>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i class="fa fa-times-circle" aria-hidden="true"></i>
                </button>
            </div>
            <div class="modal-body" >
                <fieldset class="scheduler-border">
                    <legend class="scheduler-border">Seguimiento de Actividades</legend>
                    <div class="row">
                        <div class="col-lg-6 col-sm-12">
                            <div class="form-group">
                                <label>Etapa</label>
                                <select name="ddlEtapa" id="ddlEtapa" class="form-control">
                                    <option value="">[--Seleccione--]</option>
                                    <option value="Ejecución">Ejecución</option>
                                    <option value="OTA">OTA</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-12">
                            <div class="form-group">
                                <label>Mes</label>
                                <select name="ddlMes" id="ddlMes" class="form-control">
                                    <option value="0">[--Seleccione--]</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-12 col-sm-12">
                            <div class="form-group">
                                <label>Actividad</label>
                                <select name="ddlActividad" id="ddlActividad" class="form-control">
                                    <option value="0">[--Seleccione--]</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 col-sm-12">
                            <div class="form-group">
                                <label>Fecha</label>
                                @Html.TextBox("txtFecha", null, new { @class = "form-control date-pick" })
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-12">
                            <div class="form-group">
                                <label>Nro. Hombres</label>
                                @Html.TextBox("txtNroHombres", null, new { @class = "form-control", @onkeypress = "return soloNumeros(event);" })
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-12">
                            <div class="form-group">
                                <label>Nro. Mujeres</label>
                                @Html.TextBox("txtNroMujeres", null, new { @class = "form-control", @onkeypress = "return soloNumeros(event);" })
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-12">
                            <div class="form-group">
                                <label>Total</label>
                                @Html.TextBox("txtTotal", null, new { @class = "form-control", @onkeypress = "return soloNumeros(event);" })
                            </div>
                        </div>
                        <div class="col-lg-3 col-sm-12">
                            <div class="form-group">
                                <label>Porcentaje Asistencia</label>
                                @Html.TextBox("txtPorcentajeAsistencia", null, new { @class = "form-control", @onkeypress = "return soloDecimales(event, this);" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group text-right">
                        <button id="btnGuardar" type="button" class="btn btn-primary waves-effect " onclick="GuardarSeguimiento()"><i class="fa fa-save" aria-hidden="true"></i>Guardar</button>
                    </div>
                </fieldset>
                <fieldset class="scheduler-border">
                    <legend class="scheduler-border">Historial de Seguimiento de Actividades</legend>
                    <div class="col-lg-12 col-sm-12">
                        <div class="table-responsive">
                            <table id="dtHistorialSeguimiento" class="table table-bordered table-hover" width="100%"></table>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="modal-footer text-center">
                <button type="button" class="btn btn-danger waves-effect " data-dismiss="modal"><i class="fa fa-times" aria-hidden="true"></i>Cerrar</button>
            </div>
        </div>
    </div>
</div>


@section _ScriptCode {
    <script src="~/Content/js/jsFamilias.js"></script>
}

